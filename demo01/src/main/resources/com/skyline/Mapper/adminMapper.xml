<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.skyline.Mapper.adminMapper">

    <update id="updateByAid" parameterType="com.skyline.Entity.Admin">
        UPDATE sc_admin
        <set>
            <if test="aaccount != null">account = #{account},</if>
            <if test="apassword != null">password = #{password},</if>
            <if test="aname != null">name = #{name},</if>
            <if test="atel != null">tel = #{tel},</if>
            <if test="aimg != null">img = #{img},</if>
            <if test="islogin != null">islogin = #{islogin},</if>
        </set>
        WHERE aid = #{aid}
    </update>

</mapper>