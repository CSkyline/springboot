<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.skyline.Mapper.adminMapper">

    <update id="updateByAid" parameterType="com.skyline.Entity.Admin">
        UPDATE sc_admin
        <set>
            <if test="aaccount != null">aaccount = #{aaccount},</if>
            <if test="apassword != null">apassword = #{apassword},</if>
            <if test="aname != null">aname = #{aname},</if>
            <if test="atel != null">atel = #{atel},</if>
            <if test="aimg != null">aimg = #{aimg},</if>
            <if test="islogin != null">islogin = #{islogin},</if>
        </set>
        WHERE aid = #{aid}
    </update>

</mapper>