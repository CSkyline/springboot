    <!-- 根据多个id删除数据 -->
    <delete id="deleteProductByIds" parameterType="java.util.List">
        DELETE FROM sc_product
        WHERE pid IN
        <foreach collection="pids" item="pid" open="(" separator="," close=")">
            #{pid}
        </foreach>
    </delete>

    <!--根据id修改数据-->
    <update id="updateProductByPid" parameterType="com.skyline.Entity.Product">
        UPDATE sc_product
        <set>
            <if test="proname != null">proname = #{proname},</if>
            <if test="price != null">price = #{price},</if>
            <if test="description != null">description = #{description},</if>
            <if test="imgstr != null">imgstr = #{imgstr},</if>
            <if test="soldnum != null">soldnum = #{soldnum},</if>
            <if test="cid != null">cid = #{cid},</if>
            <if test="num != null">num = #{num},</if>
            <if test="addtime != null">addtime = #{addtime},</if>
        </set>
        WHERE pid = #{pid}
    </update>

    <!--根据商品名字进行模糊查找-->
    <select id="selectProductBypName" parameterType="java.lang.String" resultType="com.skyline.Entity.Product">
        SELECT * FROM sc_product WHERE proname LIKE CONCAT('%', #{pname}, '%')
        ORDER BY CASE WHEN proname LIKE #{pname} THEN 0 ELSE 1 END, proname
    </select>

    <!--通过商品名字和上架时间查找-->
    <select id="selectProductByNameTime" resultType="com.skyline.Entity.Product">
        SELECT * FROM sc_product
        <where>
            <if test="proname != null and proname != ''">
                AND proname like CONCAT('%',#{pname},'%')
            </if>
            <if test="addtime != null ">
                AND addtime &gt;= #{addtime}
            </if>
        </where>
    </select>


</mapper>